{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["pl"],
  "tsConfig": "tsconfig.json",
  "output": {
    "language": "ts",
    "mode": "runtime",
    "outputDir": "./frontend/locales",
    "localeCodesModule": "./frontend/locales/locale-codes.ts"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "./frontend/locales/xliff"
  }
}
