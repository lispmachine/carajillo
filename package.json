{
  "name": "carajillo",
  "version": "1.0.0",
  "description": "Newsletter subscription management for loops.so",
  "main": "backend/api.ts",
  "files": [
    "backend/**/*.ts",
    "frontend/dist/**/*",
    "netlify/**/*",
    "netlify.toml",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "npm run build:openapi && npm run build:localize",
    "build": "webpack",
    "build:localize": "lit-localize build",
    "build:openapi": "node scripts/generate-openapi-spec.js",
    "dev": "netlify dev -c 'webpack --watch'",
    "dev:localize": "lit-localize extract",
    "check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run check && npm test && npm run build"
  },
  "keywords": [
    "netlify",
    "captcha",
    "mailing lists",
    "loops.so"
  ],
  "author": "Łukasz Cieśnik <lukasz.ciesnik@gmail.com>",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/lispmachine/carajillo.git"
  },
  "bugs": {
    "url": "https://github.com/lispmachinecarajillo/issues"
  },
  "homepage": "https://github.com/lispmachine/carajillo#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@lit/context": "^1.1.6",
    "@lit/localize": "^0.12.2",
    "@lit/task": "^1.0.3",
    "@material/web": "^2.4.1",
    "@netlify/functions": "^5.1.1",
    "@types/express": "^4.17.25",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "express-openapi-validator": "^5.6.0",
    "js-confetti": "^0.13.1",
    "jsonwebtoken": "^9.0.3",
    "lit": "^3.3.2",
    "loops": "^6.0.1",
    "node-fetch": "^3.3.2",
    "serverless-http": "^4.0.0"
  },
  "devDependencies": {
    "@lit/localize-tools": "^0.8.1",
    "@types/cors": "^2.8.19",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.2",
    "@types/node-fetch": "^2.6.13",
    "dotenv": "^17.2.3",
    "generate-json-webpack-plugin": "^2.0.0",
    "html-webpack-plugin": "^5.6.5",
    "js-yaml": "^4.1.1",
    "netlify-cli": "^23.12.3",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5"
  }
}
